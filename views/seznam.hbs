<div class="container text-center">
  <div class="row">
    <div class="col-md-6">
      <h3><i class="fas fa-video"></i>Seznam 100 najbolje ocenjenih filmov</h3>
      <div id="filmi">
        {{#each seznamFilmov as |film|}}
        <div id="{{film.id}}" class="film">
          <button type="button" class="btn btn-light btn-sm {{film.marketing}}">
            <i class="fas fa-plus"></i>
            <strong><span class="naslov">{{film.naslov}}</span></strong> 
            <i class="fas fa-globe-europe"></i><span class="jezik">{{film.jeziki}}</span> 
            <i class="fas fa-signal"></i><span class="ocena">{{film.ocena}}</span>
            <i class="far fa-clock"></i><span class="trajanje">{{film.trajanje}}</span> min
          </button>
        </div>
        {{/each}}
      </div>
    </div>
    <div class="col-md-6">
      <h3><i class="fas fa-shopping-cart"></i>Nakupovalna košarica</h3>
      <div id="kosarica"></div>
      <div id="sporocilo"></div>
      <button id="racun_html" type="button" class="btn btn-success btn-sm" disabled>
        <i class="fas fa-euro-sign"></i>Pripravi račun (HTML)
      </button>
      <button id="racun_xml" type="button" class="btn btn-success btn-sm" disabled>
        <i class="fas fa-euro-sign"></i>Pripravi račun (XML)
      </button>
      <br>
      <div id="chartContainer" style="height: 300px; width: 100%"></div>
    </div>
  </div>
</div>

<style>
  #kosarica {
    margin-bottom: 10px;
  }

  #podrobnosti,
  #chartContainer {
    margin-top: 20px;
  }

  .film button {
    width: 80%;
    margin-bottom: 5px;
  }

  .obicajno {
    color: black;
  }
  .action,.action:hover{
    color: tomato;
  }
  .criminal,.criminal:hover{
    color:darkorchid;
  }
  .oboje,.oboje:hover{
    color:goldenrod;
  }
</style>

<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>

<script src="skripte/seznam.js"></script>